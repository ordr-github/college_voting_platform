<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Success Page</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f0f2f5;
            margin: 0;
            padding: 0;
        }

        header {
            background-color: purple;
            padding: 20px 0;
            color: white;
        }

        nav {
            display: flex;
            justify-content: space-between;
            align-items: center;
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 3rem;
        }

        button {
            width: 70px;
            height: 30px;
            background-color: green;
            color: white;
            border: none !important;
            border-radius: 5px;
            cursor: pointer;
        }

        nav .left {
            font-size: 1.5em;
            font-weight: bold;
        }

        nav .right ul {
            list-style: none;
            margin: 0;
            padding: 0;
            display: flex;
        }

        nav .right li {
            margin-left: 1em;
        }

        nav .right a {
            color: white;
            text-decoration: none;
            padding: 0.5em 1em;
            background-color: grey;
            border-radius: 5px;
            transition: background-color 0.3s;
        }

        nav .right a:hover {
            background-color: red;
        }

        main {
            display: flex;
            flex-direction: row;
            justify-content: center;
            align-items: flex-start;
            margin: 40px 0;
            padding: 20px;
            gap: 40px;
        }

        .user-info {
            flex: 1;
            padding: 40px;
            background-color: white;
            border-radius: 10px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            display: flex;
            flex-direction: column;
            align-content: center;
            justify-content: center;
            height: 425px;
        }

        .table-container {
            flex: 2;
            padding: 40px;
            background-color: white;
            border-radius: 10px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            height: 425px;
            overflow-y: auto; /* Enable vertical scrolling */
        }

        h2 {
            margin-bottom: 20px;
            color: #333;
        }

        .table-container h2 {
            margin-bottom: 40px;
        }

        .input-box {
            margin-bottom: 1.5em;
        }

        .input-box label {
            display: block;
            margin-bottom: 0.5em;
            font-weight: bold;
            color: #555;
        }

        .input-box input {
            width: 90%;
            padding: 15px;
            border: 1px solid #ccc;
            background-color: lightgray;
            border-radius: 5px;
            font-size: 1.2em;
            transition: border-color 0.3s;
        }

        .input-box input:focus {
            border-color: #333;
            outline: none;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        th, td {
            padding: 15px 20px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: purple;
            color: white;
            font-weight: bold;
        }

        tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        tr:nth-child(odd) {
            background-color: #fff;
        }

        tr:hover {
            background-color: #f1f1f1;
        }

        td {
            position: relative;
        }

        .table-container table {
            border-radius: 10px;
            overflow: hidden;
        }

        .table-container table tbody tr {
            transition: background-color 0.3s;
        }

        .table-container table tbody tr:hover {
            background-color: #e9e9e9;
        }

        .table-container table tbody tr td {
            transition: background-color 0.3s;
        }

        .table-container table tbody tr:hover td {
            background-color: #e9e9e9;
        }

        @media (max-width: 1024px) {
            nav {
                padding: 0 2rem;
            }

            .user-info, .table-container {
                padding: 30px;
                height: auto;
            }

            nav .left {
                font-size: 1.3em;
            }

            nav .right a {
                padding: 0.5em 0.8em;
            }

            th, td {
                padding: 12px 15px;
            }
        }

        @media (max-width: 800px) {
            nav {
                flex-direction: column;
                align-items: flex-start;
                padding: 1rem;
            }

            nav .left {
                margin-bottom: 1rem;
            }

            nav .right ul {
                flex-direction: column;
                align-items: flex-start;
            }

            nav .right li {
                margin-left: 0;
                margin-bottom: 0.5rem;
            }

            main {
                flex-direction: column;
                align-items: center;
            }

            .user-info, .table-container {
                width: 75%;
                padding: 20px;
            }

            th, td {
                padding: 10px 12px;
            }
        }

        @media (max-width: 600px) {
            nav {
                padding: 0.5rem;
            }

            .user-info, .table-container {
                width: 100%;
                padding: 15px;
            }

            th, td {
                padding: 4px 5px;
            }

            table {
                font-size: 0.9em;
            }

            .input-box input {
                width: 80%;
            }

            button {
                width: 80%;
            }
        }
    </style>
</head>
<body>
    <header>
        <nav>
            <div class="left">College Voting</div>
            <div class="right">
                <ul>
                    <li><a href="/signout">Logout</a></li>
                </ul>
            </div>
        </nav>
    </header>
    <main>
        <div class="user-info">
            <h2>Voter Information</h2>
            <div class="input-box">
                <label for="firstName">First Name:</label>
                <input type="text" id="firstName" name="firstName" value="<%= user.firstName %>" readonly>
            </div>
            <div class="input-box">
                <label for="lastName">Last Name:</label>
                <input type="text" id="lastName" name="lastName" value="<%= user.lastName %>" readonly>
            </div>
            <div class="input-box">
                <label for="email">Email:</label>
                <input type="email" id="email" name="email" value="<%= user.email %>" readonly>
            </div>
            <input type="hidden" id="voteValidate" name="voteValidate" value="<%= user.vote_validate %>">
        </div>
        <div class="table-container">
            <h2>Candidate List</h2>
            <table>
                <thead>
                    <tr>
                        <th>Sno</th>
                        <th>Name</th>
                        <th>Year/Branch</th>
                        <th>Vote Button</th>
                    </tr>
                </thead>
                <tbody>
                    <% candidates.forEach(function(candidate, index) { %>
                        <tr>
                            <td><%= index + 1 %>.</td>
                            <td><%= candidate.candidate %></td>
                            <td><%= candidate.year %></td>
                            <td>
                                <form action="/vote" method="post">
                                    <input type="hidden" name="candidateName" value="<%= candidate.candidate %>">
                                    <button type="submit" class="vote-button" data-candidate="<%= candidate.candidate %>">Vote</button>
                                </form>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </main>
    <script>
    document.addEventListener('DOMContentLoaded', function() {
        var voteValidate = document.getElementById('voteValidate').value;
        
        // If user has already voted, disable all buttons and highlight the voted candidate
        if (voteValidate === 'true') {
            disableButtons();
            setVotedButton(localStorage.getItem('votedCandidate'));
        }
    
        // Attach submit event to each form
        var forms = document.querySelectorAll('form');
    
        forms.forEach(function(form) {
            form.addEventListener('submit', function(event) {
                event.preventDefault();
                
                // Disable all buttons after voting
                disableButtons();
                
                var clickedButton = event.submitter;
                clickedButton.textContent = "Voted";
                
                var candidate = clickedButton.getAttribute('data-candidate');
                localStorage.setItem('votedCandidate', candidate);
    
                // Submit the form after localStorage is set
                form.submit();
            });
        });
    
        // Function to disable all vote buttons
        function disableButtons() {
            var buttons = document.querySelectorAll('.vote-button');
            buttons.forEach(function(button) {
                button.disabled = true;
                button.style.backgroundColor = "gray";
            });
        }
    
        // Function to highlight the voted candidate button
        function setVotedButton(candidate) {
            var buttons = document.querySelectorAll('.vote-button');
            buttons.forEach(function(button) {
                if (button.getAttribute('data-candidate') === candidate) {
                    button.textContent = "Voted";
                    button.style.backgroundColor = "red";
                }
            });
        }
    });
    </script>
</body>
</html>
